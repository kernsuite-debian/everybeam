+    char* cstr;
+    bool sign = false;
+    for (size_t i = 0; i != str.size(); ++i) {
+      if (str[i] == '-') {
+        sign = true;
+        break;
+      } else if (str[i] != ' ') {
+        sign = false;
+        break;
+      }
+    }
